<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:parentTag="android.widget.FrameLayout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/google_sans_regular"
        android:gravity="center"
        android:text="Google Mono View"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/view_speed_google_more"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="end"
        android:background="?selectableItemBackground"
        android:padding="16dp"
        android:src="@drawable/ic_more_vert_grey_24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/view_speed_google_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_mono_regular"
                android:gravity="end"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:text="0"
                android:textSize="100sp"
                android:textStyle="bold"
                tools:text="130" />

            <TextView
                android:id="@+id/view_speed_google_speed_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:fontFamily="@font/google_sans_regular"
                android:gravity="center"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:text="km/h"
                android:textSize="22sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/view_speed_google_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="20dp"
        android:background="?selectableItemBackground"
        android:fontFamily="@font/google_sans_regular"
        android:gravity="center"
        android:padding="20dp"
        android:text="START"
        android:textSize="40sp" />

</merge>